{% extends "base.html.twig" %}

{% block title %}
	Blog | Création d'un article (méthode 2, la plus usitée)
{% endblock %}

{% block body %}
    <h1 class="fst-italic text-center my-5">
    {# Si la condition IF renvoie TRUE, cela veut dire que editMode contient un ID d'un article , alors c'est une modification #}
    {% if editMode %}
        Modification de l'article
    {% else %}
    {# Sinon editMode ne contient aucun ID d'article, il renvoi FALSE, alors c'est une insertion, on entre dans le ELSE #}

        Création d'un article, méthode 2 la plus usitée
    {% endif %}
    </h1>

    {# ouverture de la balise <form> + method="" + action="" #}
    {{form_start(formArticle)}}

        {#form_row() est une fonction Twig permettant de faire appel aux différents champs du formulaire #}
        {# Mieux vaut palcer les attribut dans cette page plutôt que dans la vue (ArticleType) #}
        {{form_row(formArticle.titre, {'label': "Titre de l'article"}) }}

        {{form_row(formArticle.contenu)}}

        {{form_row(formArticle.image, {'label': "Titre de l'image"})}}

        <button type="submit" class="btn btn-dark mb-5">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Enregistrer    
        {% endif %}
        </button>

    {{form_end(formArticle)}}
    {# fermeture de la balise <form> #}

{% endblock %}